<Window x:Class="AirportDispatcherProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportDispatcherProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="BackButton" HorizontalAlignment="Right" Margin="15" Width="100" Click="BackButtonClick">Назад
        </Button>
        <Frame x:Name="MainFrame" Grid.Row="1" ContentRendered="MainFrameContentRendered" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
