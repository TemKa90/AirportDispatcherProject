<Page x:Class="AirportDispatcherProject.View.FlightListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcherProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlightListPage">

    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30">Список рейсов</TextBlock>
        <StackPanel Grid.Row="3" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="AddFlightButton" Width="150" Height="35" Margin="10" Click="AddFlightButtonClick">Добавить</Button>
            <Button x:Name="EditFlightButton" Width="150" Height="35" Margin="10" Click="EditFlightButtonClick">Редактировать</Button>
            <Button Width="150" Height="35" Margin="10">Удалить</Button>
        </StackPanel>
    </Grid>
</Page>
