<Page x:Class="AirportDispatcherProject.View.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcherProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <TextBlock FontSize="32">Авторизация</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="AuthLoginTextBox" Width="300"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox" Width="300"></PasswordBox>
            <Button x:Name="AuthButton" Width="150" Height="30" HorizontalAlignment="Right" Margin="0, 20, 0, 0" Click="AuthButtonClick">Вход</Button>
        </StackPanel>
    </Grid>
</Page>
