<Page x:Class="AirportDispatcherProject.View.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcherProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="FlightsButton" Width="200" Height="50" Margin="20" Click="FlightsButtonClick" Content="Рейсы"/>
            <Button x:Name="TicketsButton" Width="200" Height="50" Margin="20" Click="TicketsButtonClick" Content="Билеты"/>
        </StackPanel>
    </Grid>
</Page>
