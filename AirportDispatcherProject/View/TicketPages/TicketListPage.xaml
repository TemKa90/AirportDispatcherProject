<Page x:Class="AirportDispatcherProject.View.TicketListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcherProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TicketListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="30">Список билетов</TextBlock>
        <StackPanel Grid.Row="3" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="AddTicketButton" Width="150" Height="35" Margin="10" Click="AddTicketButtonClick">Добавить</Button>
            <Button Width="150" Height="35" Margin="10">Редактировать</Button>
            <Button Width="150" Height="35" Margin="10">Удалить</Button>
        </StackPanel>
    </Grid>
</Page>
