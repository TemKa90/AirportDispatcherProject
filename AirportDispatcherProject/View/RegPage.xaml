<Page x:Class="AirportDispatcherProject.View.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AirportDispatcherProject.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <TextBlock FontSize="32">Регистрация</TextBlock>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Логин:</TextBlock>
            <TextBox x:Name="AuthLoginTextBox" Width="300"></TextBox>
            <TextBlock>Пароль:</TextBlock>
            <PasswordBox x:Name="AuthPasswordBox" Width="300"></PasswordBox>
            <StackPanel Orientation="Horizontal"  HorizontalAlignment="Right">
                <Button x:Name="AddUserButton" Width="150" Height="30" Margin="0, 20, 0, 0" Click="AddUserButtonClick">Создать пользователя</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
